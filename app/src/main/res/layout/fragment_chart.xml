<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/Loading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/info_text_chart"
            app:layout_constraintEnd_toEndOf="@+id/main_chart"
            app:layout_constraintStart_toStartOf="@+id/main_chart"
            app:layout_constraintTop_toTopOf="@+id/main_chart"
            app:layout_constraintBottom_toBottomOf="@+id/main_chart"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:background="@color/white" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:id="@+id/start_date_button"
            android:enabled="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chart_selection"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/end_date_button"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/main_chart" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end"
            android:id="@+id/end_date_button"
            android:enabled="false"
            app:layout_constraintTop_toTopOf="@+id/start_date_button"
            app:layout_constraintBottom_toBottomOf="@+id/start_date_button"
            app:layout_constraintStart_toEndOf="@+id/start_date_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/main_chart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/start_date_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.499"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/chart_selection"
            app:layout_constraintTop_toTopOf="@+id/start_date_button"
            app:layout_constraintBottom_toBottomOf="@+id/start_date_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/start_date_button"
            android:layout_marginStart="16dp"
            android:entries="@array/charts_array"
            android:background="@drawable/spinner_border"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>